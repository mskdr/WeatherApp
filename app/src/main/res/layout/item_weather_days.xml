<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="weatherList"
            type="com.muhammetkdr.weatherapp.model.forecast.WeatherList" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rvItemCardView"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="15dp"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/rvItemRelativeLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvItemWeatherDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{weatherList.main.temp.toString()+@string/celcius_string}"
                android:layout_marginTop="7dp"
                android:layout_gravity="center"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imgWeatherCondition"
                android:layout_width="90dp"
                android:layout_height="90dp"
                setWeatherImage="@{weatherList.weather.get(0).icon}"
                android:layout_gravity="center|top"
                android:layout_margin="4dp"
                tools:srcCompat="@tools:sample/avatars" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvItemWeatherContidion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:text="@{weatherList.dtTxt}"
                android:textSize="16sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>