<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/teal_700">

    <ImageView
        android:id="@+id/imgBackPress"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/custom_toolbar_backimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        tools:text="21.06.1997"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imgBackPress"
        app:layout_constraintEnd_toStartOf="@id/imgSearchPress"
        app:layout_constraintStart_toEndOf="@id/imgBackPress"
        app:layout_constraintTop_toTopOf="@id/imgBackPress" />

    <ImageView
        android:id="@+id/imgSearchPress"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:padding="8dp"
        android:contentDescription="@string/custom_toolbar_searchimage"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="@id/imgBackPress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgBackPress" />

</androidx.constraintlayout.widget.ConstraintLayout>