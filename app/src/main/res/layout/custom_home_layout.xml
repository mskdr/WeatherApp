<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weatherResponse"
            type="com.muhammetkdr.weatherapp.model.current.WeatherResponse" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/custom_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:cardBackgroundColor="@color/light_gray"
        android:layout_margin="6dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/customRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgView_custom_home"
                android:layout_width="150dp"
                android:layout_height="150dp"
                setWeatherImage="@{weatherResponse.weather.get(0).icon}"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                tools:srcCompat="@tools:sample/avatars" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvWeatherCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="@{weatherResponse.main.temp+@string/celcius_string}"
                android:layout_marginStart="23dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="30dp"
                android:layout_toEndOf="@+id/imgView_custom_home"
                android:gravity="center"
                android:textSize="20sp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvWeatherDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWeatherCondition"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="27dp"
                android:layout_toEndOf="@+id/imgView_custom_home"
                android:gravity="center"
                android:hint="@string/Test_hint"
                android:text="@{weatherResponse.weather.get(0).description}"
                android:textSize="20sp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>