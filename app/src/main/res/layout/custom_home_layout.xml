<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="weatherEntity"
            type="com.muhammetkdr.weatherapp.domain.entity.currentweather.CurrentWeatherEntity" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/custom_CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/customRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgView_custom_home"
                setWeatherImage="@{weatherEntity.weather.get(0).icon}"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:layout_below="@+id/linearLayoutCityandCountry"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:id="@+id/linearLayoutCityandCountry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@{weatherEntity.name+@string/coma}"
                    android:layout_margin="2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    tools:text="Denizli,"
                    android:textSize="20sp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{weatherEntity.sys.country}"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:textColor="@color/white"
                    tools:text="TR"
                    android:textSize="20sp" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCurrentTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayoutCityandCountry"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/imgView_custom_home"
                android:gravity="center"
                tools:text="28.4"
                android:text="@{weatherEntity.formattedTemperature+@string/celcius_string}"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvCurrentWeatherString"
                android:layout_width="0dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurrentTemp"
                android:layout_alignStart="@+id/tvFeelsLikeTemp"
                android:layout_alignEnd="@+id/tvFeelsLikeTemp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="@string/current_weather"
                android:textSize="12sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvFeelsLikeTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurrentWeatherString"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/imgView_custom_home"
                android:gravity="center"
                tools:text="26.64"
                android:text="@{weatherEntity.main.feelsLike+@string/celcius_string}"
                android:textSize="24sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvFeelsLikeString"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFeelsLikeTemp"
                android:layout_alignStart="@+id/tvFeelsLikeTemp"
                android:textColor="@color/white"
                android:layout_alignEnd="@+id/tvFeelsLikeTemp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:text="@string/current_feels_like"
                android:textSize="12sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvWeatherDescrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgView_custom_home"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                tools:text="Mevcut durum: Yağışlı"
                android:text="@{@string/current_weather_condition+weatherEntity.weather.get(0).description}"
                android:textSize="20sp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>